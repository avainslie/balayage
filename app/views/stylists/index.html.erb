
<table class="table table-hover table-bordered">
  <thead class="table-dark">
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Instagram</th>
      <th>User id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stylists.each do |stylist| %>
      <tr>
        <td><%= stylist.first_name %></td>
        <td><%= stylist.last_name %></td>
        <td><%= stylist.email %></td>
        <td><%= stylist.phone %></td>
        <td><%= stylist.instagram %></td>
        <td><%= stylist.user_id %></td>
        <td><%= link_to 'Profile', stylist %></td>
        <td><%= link_to 'Edit', edit_stylist_path(stylist) %></td>
        <td><%= link_to 'Destroy', stylist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Stylist', new_stylist_path, class:'btn btn-secondary'%>
